<!DOCTYPE html>
<html class="theme-light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ url_for('static', filename='dist/accounts.css') }}">
</head>

<template id="statement_row">
    <tr>
        <td id="filename"></td><td id="start"></td><td id="end"></td>
    </tr>
</template>

<template id="account_row">
    <div class="box">
        <article class="media">
            <figure class="media-left">
                <span class="icon is-large">
                    <i class="fas fa-coins"></i>
                </span>
            </figure>
            <div class="media-content">
                <div class="content">
                    <div class="title is-5"><span id="bank"></span></div>
                    <div><strong>Account Number:</strong> <span id="account_number"></span></div>
                    <div><strong>Name:</strong> <span id="name"></span></div>
                    <div><strong>Description:</strong> <span id="description"></span></div>
                    <div><span class="subtitle is-5">Statements</span>
                        <table  class="table" id="statements">
                            <tr><th>Statement</th><th>From</th><th>To</th></tr>
                        </table>
                    </div>
                </div>
            </div>
        </article>
    </div>
</template>


<body>
    <div class="section">
        <div id="wrapper"></div>
    </div>
    <script src="{{ url_for('static', filename='dist/accounts.js') }}"></script>
</body>

</html>