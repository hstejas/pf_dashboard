<html>

<body>
    <div>
        <canvas id="myChart"></canvas>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const ctx = document.getElementById('myChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: {{labels | tojson}},
                datasets:[
                    {
                        label: "balance",
                        data: {{balance | tojson}}
                    },
                    {
                        label: "credit",
                        data: {{credit | tojson}}
                    },
                    {
                        label: "debit",
                        data: {{debit | tojson}}
                    },
                ]
            }
        })
    </script>
</body>

</html>